<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:backgroundTint="#D7DBDD"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                android:id="@+id/trip_id_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/trip_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Summer vacation"
                app:layout_constraintStart_toEndOf="@+id/trip_id_txt"
                app:layout_constraintTop_toTopOf="@+id/trip_id_txt" />

            <TextView
                android:id="@+id/trip_date_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:text="22/12/2022"
                app:layout_constraintStart_toEndOf="@+id/trip_name_txt"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/trip_destination_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Da nang"
                app:layout_constraintStart_toStartOf="@+id/trip_name_txt"
                app:layout_constraintTop_toBottomOf="@+id/trip_name_txt" />

            <TextView
                android:id="@+id/requireAssessmentLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="12dp"
                android:text="Require Assessment:"
                app:layout_constraintStart_toEndOf="@+id/trip_name_txt"
                app:layout_constraintTop_toBottomOf="@+id/trip_date_txt" />

            <TextView
                android:id="@+id/trip_require_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:text="Yes"
                app:layout_constraintStart_toEndOf="@+id/requireAssessmentLabel"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>